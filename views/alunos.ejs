<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Alunos</title>

</head>

<body class="text-center">
    <header class="masthead mb-auto">
        <div class="inner">
            <h3 class="masthead-brand">Alunos</h3>
            <nav class="nav nav-masthead justify-content-center">
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/formAlunos">Cadastro</a>
                <a class="nav-link active" href="/alunos">Alunos</a>
            </nav>
        </div><br><br><br><br>
        <div class='btn-incluir'>
            <a href="/formAlunos" class="btn btn-lg btn-secondary">Incluir</a>
        </div>
        <br>
        <table class="table table-sm table-dark">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Cidade</th>
                    <th scope="col">UF</th>
                </tr>
            </thead>
            <tbody>
                <% aluno.forEach(function(item){%>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= item.nome %></td>
                    <td><%= item.email %></td>
                    <td><%= item.cidade %></td>
                    <td><%= item.uf %></td>
                    <td>
                        <a href="/atualizarAluno?id=<%= item.id %>" class="btn btn-lg btn-secondary">Atualizar</a>
                    </td>
                    <td>
                        <a href="/excluirAluno?id=<%= item.id %>" class="btn btn-lg btn-secondary"
                            onclick="return confirm('Confirmar a exclusÃ£o')">Excluir</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
</body>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
